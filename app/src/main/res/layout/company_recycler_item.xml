<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="4dp"
    android:padding="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_margin="@dimen/margin"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/company_image" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin"
            android:background="@color/card_view_light_text_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Faber-Ventures"
                android:id="@+id/company_name"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/big_margin"
                android:textSize="@dimen/main_text_size"
                android:textColor="@color/text_title"
                android:layout_toLeftOf="@+id/company_type"
                android:layout_toStartOf="@+id/company_type" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/twitter_logo"
                android:drawableLeft="@mipmap/twitter_logo"
                android:text="\@faber_ventures"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/small_margin"
                android:id="@+id/company_twitter"
                android:layout_below="@+id/company_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/margin"
                android:textSize="@dimen/text_size"
                android:textColor="@color/text_sub_title"
                android:layout_toLeftOf="@+id/company_type"
                android:layout_toStartOf="@+id/company_type" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lisbon"
                android:drawablePadding="@dimen/small_margin"
                android:drawableStart="@mipmap/placeholder"
                android:drawableLeft="@mipmap/placeholder"
                android:gravity="center_vertical"
                android:id="@+id/company_city_country"
                android:layout_below="@+id/company_twitter"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/main_text_size"
                android:textColor="@color/text_sub_title"
                android:layout_alignRight="@+id/company_twitter"
                android:layout_alignEnd="@+id/company_twitter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Venture Capital"
                android:id="@+id/company_type"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/main_text_size"
                android:textColor="@color/text_title"
                />

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>