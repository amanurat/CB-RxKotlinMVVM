<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_margin="@dimen/margin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/company_image" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Faber-Ventures"
                android:id="@+id/company_name"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/small_margin"
                android:textSize="@dimen/text_size"
                android:textColor="@color/text_title"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/ic_launcher"
                android:drawableLeft="@mipmap/ic_launcher"
                android:text="\@faber_ventures"
                android:gravity="center_vertical"
                android:id="@+id/company_twitter"
                android:layout_below="@+id/company_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/small_margin"
                android:textSize="@dimen/text_size"
                android:textColor="@color/text_sub_title"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lisbon"
                android:drawableStart="@mipmap/ic_launcher"
                android:drawableLeft="@mipmap/ic_launcher"
                android:gravity="center_vertical"
                android:id="@+id/company_city_country"
                android:layout_below="@+id/company_twitter"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/main_text_size"
                android:textColor="@color/text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Venture Capital"
                android:id="@+id/company_type"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/main_text_size"
                android:textColor="@color/text_title"/>

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>